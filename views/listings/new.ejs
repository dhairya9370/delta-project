    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create New Listing</h3>
    <form method="POST" action="/listings" enctype="multipart/form-data" novalidate class="needs-validation">
        <label for="title" class="form-label">Title</label>
        <input id="title" name="listing[title]" class="form-control mb-3" type="text" required>
        
        <label for="description" class="form-label">Description</label>
        <textarea id="description"  class="form-control mb-3" name="listing[description]" required></textarea>
        
        <label for="location" class="form-label">Location</label>
        <input id="location" class="form-control mb-3" name="listing[location]" type="text" required>
        
        <div class="row">
            <div class="col-md-5">
                <label for="price" class="form-label">Price</label>
                <input id="price" class="form-control mb-3" name="listing[price]" required>
            </div>
            <div class="col-md-7">
                <label for="country" class="form-label">Country</label>
                <input id="country" class="form-control mb-3" name="listing[country]" type="text" required>
            </div>
        </div>
        
        <label for="image" class="form-label">Upload Pictures of your property</label>
        <input id="image" class="form-control mb-3" name="listing[image]" type="file" required>
        
        <br>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
            <label class="form-check-label" for="invalidCheck">
              I Agree to terms and conditions.
            </label>
            <div class="invalid-feedback">
              This is mandatory.
            </div>
        </div>
        <br>
        <button type="submit" class="btn btn-danger">Save & Add</button>
    </form>
    <br><br>
    </div>
    </div>