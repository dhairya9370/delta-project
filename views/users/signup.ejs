<% layout("layouts/boilerplate.ejs") %>
<div class="row mt-3 mb-4">
    <div class="col-6 offset-3">
        <h1 class="col-8 offset-2">SignUp on Airbnb</h1><br>
        <form novalidate class="needs-validation" method="POST" action="/signup">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" name="credentials[username]" id="username" required>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email address</label>
              <input type="email" class="form-control" name="credentials[email]" id="email" placeholder="name@example.com" required>
            </div>
            <label for="pass" class="form-label">Password</label>
            <input type="password" id="pass" name="credentials[password]" class="form-control" aria-describedby="passwordHelpBlock" required>
            <div id="passwordHelpBlock" class="form-text mb-4">
              Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
            </div>
            <div class="col-4">
              <button class="btn btn-danger" type="submit">SignUp</button>
            </div>
        </form>
    </div>
</div>
